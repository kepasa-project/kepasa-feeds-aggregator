<div class="row">
	<div class="col-lg-12">

	<p class="search-results-count"><h4><%= @feed.title %> <%= I18n.t("feed.feed_follow_by") %> <%= link_to @feed.user.username, user_path(@feed.user) %></h4></p>

    <% @feedlists.order('published_at DESC').limit(5).each do |notizia| %>
	 <section class="search-result-item">
	    
    <div class="container-fluid">
                            <div class="row">
                                <div class="col-sm-2">
                                
                                <%= render "shared/left_column", notizia: notizia %> 
                                
                                </div>
                                <div class="col-sm-8">
                                    <h4 class="search-result-item-heading">
        							<%= notizia.name.nil? ? (link_to "no title", feedlist_path(notizia.id)) : (link_to notizia.name.html_safe, feedlist_path(notizia.id)) %>
        						 	</h4>
        						 	
                                    <p class="description">
                                        <%= notizia.summary.nil? ? "NO summary" : notizia.summary.html_safe %> 
                                    </p>
                                    <p>
                                    
                                    <%= render 'shared/info_share', notizia: notizia %>

                                    </p>
                                 </div>
        						<div class="col-sm-2 text-align-center">
                                    
                                    <%= render 'shared/info_click', notizia: notizia %>

        						</div>
                            </div>
     </div>
    
    </section>
                    <% end %>
       </div>
    </div>



 <div class="row">
   <div class="col-lg-12 text-center">
   <%= paginate @feedlists %> 
   </div>
</div>