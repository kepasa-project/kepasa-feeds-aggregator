<style>
div.gallery {
  margin: 5px;
  border: 1px solid #ccc;
  float: left;
  width: 180px;
  height: 140px;
}

div.gallery:hover {
  border: 1px solid #777;
}

div.gallery img {
  width: 100%;
  height: auto;
}

div.desc {
  padding: 15px;
  text-align: center;
}
</style>

<div class="container">


  <div class="row">
    <div class="col-lg-12 text-center">

      <p id="notice"><%= notice %></p>

      <%= render 'shared/tab_feed' %>

      <h1>Categories</h1>

      language <%= @language %> <br />

      <div class="row">
    <% @categories.each do |category| %>
        <div class="col-lg-4 text-center">
          <div class="panel panel-default">
            <div class="panel-body">
              <p><%= image_tag (category.category_logo.thumb.url.to_s) if category.category_logo.present? %> </p>
              <h5> <%= link_to category.name, category_path(category) %> </h5>
            </div>
          </div>
        </div>
      
    <% end %>
    </div>
      
    
      <br /><br /><br />

      

      <br>

      <%#= link_to 'New Category', new_category_path %>

    </div>
  </div>

</div> <br />