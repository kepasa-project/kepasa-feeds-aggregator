<div class="container">
    <main id="content" class="content" role="main">
      <ol class="breadcrumb">
            <li>Tu eres aqui</li>
            <li class="active">Feeds</li>
        </ol>

        <div class="row">
              <div class="col-lg-12">

    
		<h3> La lista de los Feeds con Etiqueta: <u> <%= @tag %> </u> </h3> 
        
        <% @feed_tags.order('updated_at DESC').each do |feed| %> 
        
            <p>

            <%= link_to feed.title, user_feed_path(feed.user, feed) %> | 
                <% if  feed.user == current_user %>
                    
                    Tambien tu tienes este Feed 
                    <%#= link_to '<i class="fa fa-trash-o fa-fw"></i>'.html_safe, user_feed_path(current_user, feed), method: :delete, data: { confirm: 'Estas seguro que quiere borrar esto Feed' } %> 
                
                <% else %>

                    <%= link_to '<i class="fa fa-plus"></i> Agrega'.html_safe, new_user_feed_path(current_user, :rssurl => feed.rssurl) %> 
                  
                <% end %>

            </p>

        <% end %>
    
    </div>
</div>

<div class="row">
   <div class="col-lg-12 text-center">

<%= paginate @feed_tags %>
    
    </div>
</div>

<div class="row">
   <div class="col-lg-12 text-center">
   <%#= paginate @feeds %> 
   </div>
</div>

</main>
</div>