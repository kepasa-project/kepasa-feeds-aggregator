<%#= form_for [:admin, @recommended_feed] do |form| %>
<%#= form_for admin_recommended_feeds_path(@recommended_feed) do |form| %>
<%#= form_for @recommended_feed, url: form_url do |form| %>
<%= form_with(model: recommended_feed, url: form_url , local: true) do |form| %>
  <% if @recommended_feed.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recommended_feed.errors.count, "error") %> prohibited this recommended_feed from being saved:</h2>

      <ul>
      <% @recommended_feed.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%#= form.label :category_id %>
    <%#= form.number_field :category_id, id: :recommended_feed_category_id %>
    <%= form.collection_check_boxes(:category_ids, Category.all, :id, :name, {required: :true}) do |b| %>
        <% b.label(class: "checkbox-inline input_checkbox") {b.check_box(class: "checkbox") + b.text} %>
    <% end %>
  </div>
  
  <div class="form-group">
    <%= form.label :rssurl %>
    <%= form.text_field :rssurl, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :logo %>
    <%= form.file_field :logo, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :tags %>
    <%= form.text_field :tag_list, required: true %>
  </div>


  <div class="form-group">
    <%= form.submit %>
  </div>
<% end %>
