              <p align="center"><%= link_to I18n.t("admin.edit_category"), edit_admin_category_path(category) %> | <%= link_to I18n.t("admin.delete_category"), admin_category_path(category), method: :delete, data: {confirm: "Are You Sure?"} %></p>
              
            </div>
          </div>
        </div>
    <% end %>
