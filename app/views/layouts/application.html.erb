	<script type="text/javascript">

					$(document).ready(function() {

						$('.formNotice span').click(function() {
							$("#logForm").toggle();
							$("#regForm").toggle();
						});


					});
	</script>
	-->
	
<% end %>  

<%#= render 'layouts/stats' %>

</body>
</html>