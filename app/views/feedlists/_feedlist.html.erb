<%# cache feedlist do %>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
            
             <%= render "shared/left_column", feedlist: feedlist %> 
            
            </div>
            <div class="col-sm-8">
                <h4 class="search-result-item-heading">

					<%= feedlist.name.nil? ? (link_to "no title", feedlist_path(feedlist.id)) : (link_to feedlist.name.html_safe, feedlist_path(feedlist.id)) %>

			 	</h4>

                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">

                            <p align="justify">
                                <%= feedlist.article_picture.nil? ? "-" : image_tag(feedlist.article_picture.middle.url.to_s) %>

                            </p>
                            <p class="description">
                              <div align="justify">
                                <%= feedlist.summary.nil? ? "NO summary" : sanitize(feedlist.summary) %>
                              </div>
                            </p>

                        </div>
                    </div>
                </div> <br />
                <p align="left">

                Feed: <%= feedlist.feed.nil? ? "-" : (link_to feedlist.feed.title, user_feed_path(current_user, feedlist.feed)) %>
                </p>

                <%#= render 'shared/info_share', feedlist: feedlist %>
             </div>
			<div class="col-sm-2">
                <%= render 'shared/info_click', feedlist: feedlist %>
			</div>
        </div>
    </div>
<%# end %>