<div class="container">
<div class="row">
	<div class="col-lg-12">
	
    <ol class="breadcrumb">
        <li> <%= I18n.t("feedlist.you_are_here") %> </li>
        <li class="active"><%= I18n.t("feedlist.all_my_news") %></li>
    </ol>

    <% @feedlists.each do |notizia| %>
	 <section class="search-result-item">
	    
    <div class="container-fluid">
                            <div class="row">
                                <div class="col-sm-2">
                                
                                <%= render "shared/left_column", notizia: notizia %> 
                                
                                </div>
                                <div class="col-sm-8">
                                    <h4 class="search-result-item-heading">
        								<%= link_to notizia.name, feedlist_path(notizia.id) %>
        						 	</h4>

                                    <div class="container-fluid">
                                        <div class="row">
                                            <div class="col-lg-12">

                                                <p class="description">
                                                    
                                                    <%#= notizia.summary.nil? ? "NO summary" : notizia.summary.html_safe %> 
                                                    
                                                    <%= notizia.summary.nil? ? "NO summary" : sanitize(notizia.summary) %>

                                                </p>

                                            </div>
                                        </div>
                                    </div> <br />
                                    <p align="left">

                                    Feed: <%= link_to notizia.feed.title, user_feed_path(current_user, notizia.feed) %>
                                    </p>

                                    <%= render 'shared/info_share', notizia: notizia %>
                                 </div>
        						<div class="col-sm-2">
                                    <%= render 'shared/info_click', notizia: notizia %>
        						</div>
                            </div>
     </div>
    
    </section>
                    <% end %>
       </div>
    </div>



 <div class="row">
   <div class="col-lg-12 text-center">
   <%= paginate @feedlists %> 
   </div>
</div>
</div>