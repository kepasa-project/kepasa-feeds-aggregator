<div class="container">
<main id="content" class="content" role="main">

<% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<h1> Mensajes Directos </h1>
<p><%= link_to 'EnvÃ­a Mensaje', new_message_path, class: 'btn btn-lg btn-primary' %></p>

<div class="row">
  <div class="col-sm-3">
    <ul class="nav nav-pills nav-stacked">
      <%= mailbox_section 'inbox', @box %>
      <%= mailbox_section 'sent', @box %>
      <%= mailbox_section 'trash', @box %>
    </ul>
  </div>

  <div class="col-sm-9">
  	<div class="col-sm-9">
	  <% if @box == 'trash' %>
      <p>
  
        <%= link_to 'Empty trash', {:controller => 'conversations', :action => 'empty_trash'}, class: 'btn btn-danger', :method => :post, data: {confirm: 'Esta seguro de borrar todo mensajes?'} %>
      </p>
	  <% end %>
    <ul class="list-group">
      <%= render partial: 'conversations/conversation', collection: @conversations %>
    </ul>

    <%# put here conversation %>
  </div>
</div>
</main>
</div>
